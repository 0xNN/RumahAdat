<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cyan_500"
    tools:context=".Detail">

    <ImageView
        android:id="@+id/img_foto"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/gambar_rumah"
        app:srcCompat="@drawable/gradient1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_foto"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_blue_500"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/n"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Nama Rumah : "
                android:textSize="22sp"
                tools:src="@color/colorAccent" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="..."
                android:textSize="22sp"
                tools:src="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_a_500"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Nama Provinsi : "
                android:textSize="22sp"
                tools:src="@color/colorAccent" />

            <TextView
                android:id="@+id/provinsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="..."
                android:textSize="22sp"
                tools:src="@color/colorAccent" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_b_500">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_b_500">

                <TextView
                    android:id="@+id/det"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="..."
                    android:textSize="20sp" />
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>