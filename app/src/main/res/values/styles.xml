<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.About" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1B7700</item>
        <item name="colorPrimaryDark">#249702</item>
        <item name="colorAccent">#26720D</item>
    </style>

    <style name="buttonstyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/purple_500</item>
        <item name="colorControlHighlight">#FFF</item>
    </style>

    <style name="cardviewstyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">#FFF</item>
        <item name="colorControlHighlight">#FF4646</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorColor">#ff00ff</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

</resources>


